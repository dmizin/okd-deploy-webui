{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.yaml"],
      "options": {
        "singleQuote": false,
        "bracketSpacing": true,
        "proseWrap": "preserve",
        "printWidth": 120
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "singleQuote": false,
        "quoteProps": "as-needed",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "printWidth": 80
      }
    }
  ]
}
